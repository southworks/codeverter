{
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/test/**",
    "playground/**"
  ],
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./out",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}